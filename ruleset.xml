<?xml version="1.0"?>
<ruleset name="Laravel 6.0.4 PHP Coding Standard">
    <description>Coding Standard for PMS.</description>
    <arg name="colors"/>
    <arg value="sp"/>
    <arg value="q"/>
    <arg value="n"/>

    <file>./app</file>
    <file>./config</file>
    <file>./routes</file>
    <file>./tests</file>
    <file>./resources/views</file>
    <file>./resources/lang</file>

    <exclude-pattern>*.js</exclude-pattern>

    <rule ref="PSR1"/>

    <rule ref="PSR2"/>

    <rule ref="Squiz.WhiteSpace.ScopeKeywordSpacing"/>

</ruleset>
